<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>



    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>final_project.controller.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>final_project.controller.filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/administrator/*</url-pattern>
    </filter-mapping>




    <servlet>
        <servlet-name>FrontController </servlet-name>
        <servlet-class>final_project.controller.FrontController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/frontController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <jsp-file>/jsp/loginPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HomePage</servlet-name>
        <jsp-file>/jsp/homepage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePage</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterPage</servlet-name>
        <jsp-file>/jsp/registerPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterPage</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>QuestPage</servlet-name>
        <jsp-file>/jsp/questPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuestPage</servlet-name>
        <url-pattern>/questPage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CommentForm</servlet-name>
        <jsp-file>/jsp/user/commentForm.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommentForm</servlet-name>
        <url-pattern>/commentForm</url-pattern>
    </servlet-mapping>

</web-app>

