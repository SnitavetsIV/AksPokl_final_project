<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>


    <listener>
        <listener-class>by.corporation.final_project.controller.ContextListener</listener-class>
    </listener>
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>by.corporation.final_project.controller.filter.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>by.corporation.final_project.controller.filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/administrator/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>QuestOwnerFilter</filter-name>
        <filter-class>by.corporation.final_project.controller.filter.QuestOwnerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>QuestOwnerFilter</filter-name>
        <url-pattern>/quest_owner/*</url-pattern>
    </filter-mapping>




    <servlet>
        <servlet-name>FrontController </servlet-name>
        <servlet-class>by.corporation.final_project.controller.FrontController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/frontController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HomePage</servlet-name>
        <jsp-file>/jsp/homepage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePage</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterPage</servlet-name>
        <jsp-file>/jsp/registerPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterPage</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <jsp-file>/jsp/loginPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FrozenUser</servlet-name>
        <jsp-file>/jsp/user/frozenUser.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrozenUser</servlet-name>
        <url-pattern>/user/frozen</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>QuestPage</servlet-name>
        <jsp-file>/jsp/questPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuestPage</servlet-name>
        <url-pattern>/questPage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>QuestByRatingPage</servlet-name>
        <jsp-file>/jsp/questRatingPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuestByRatingPage</servlet-name>
        <url-pattern>/questRatingPage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BookingForm</servlet-name>
        <jsp-file>/jsp/calendarForm.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingForm</servlet-name>
        <url-pattern>/bookingForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>QuestOwner</servlet-name>
        <jsp-file>/jsp/quest_owner/questOwner.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuestOwner</servlet-name>
        <url-pattern>/questOwner</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>OwnerByQuestRoomName</servlet-name>
        <jsp-file>/jsp/quest_owner/quest.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>OwnerByQuestRoomName</servlet-name>
        <url-pattern>/allQuests</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SingleQuestOwner</servlet-name>
        <jsp-file>/jsp/quest_owner/singleQuest.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SingleQuestOwner</servlet-name>
        <url-pattern>/singleQuest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>QuestOwnerBooking</servlet-name>
        <jsp-file>/jsp/quest_owner/booking.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuestOwnerBooking</servlet-name>
        <url-pattern>/booking</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Administrator</servlet-name>
        <jsp-file>/jsp/administrator/administrator.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Administrator</servlet-name>
        <url-pattern>/administrator</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AdministratorComments</servlet-name>
        <jsp-file>/jsp/administrator/userComments.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdministratorComments</servlet-name>
        <url-pattern>/userComment</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdministratorUsers</servlet-name>
        <jsp-file>/jsp/administrator/showUsersByStatus.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdministratorUsers</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdministratorMessages</servlet-name>
        <jsp-file>/jsp/administrator/userMessages.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdministratorMessages</servlet-name>
        <url-pattern>/administrator/messages</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ErrorPage</servlet-name>
        <jsp-file>/jsp/error/error.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ErrorPage</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>

</web-app>

